replica-reloader:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: inject-commit-hash
      publish:
        oci-builder: kaniko
        dockerimages:
          replica-reloader:
            registry: gcr-readwrite
            image: eu.gcr.io/gardener-project/gardener/replica-reloader
            dockerfile: Dockerfile
            tag_template: ${EFFECTIVE_VERSION}
            tag_as_latest: false
    steps: ~
  jobs:
    head-update:
      traits:
        component_descriptor: ~
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
        component_descriptor: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        component_descriptor: ~
        publish:
          dockerimages:
            replica-reloader:
              tag_as_latest: true
    release-v0.2.0-konnectivity-v0.0.14:
      repo:
        trigger: false
      traits:
        publish:
          dockerimages:
            replica-reloader:
              dockerfile: konnectivity-server/Dockerfile
              tag_template: v0.2.0-konnectivity-server-v0.0.14
              build_args:
                PROXY_SERVER_VERSION: v0.0.14
                REPLICA_RELOADER_IMAGE: eu.gcr.io/gardener-project/gardener/replica-reloader:v0.2.0
    release-v0.2.0-konnectivity-v0.0.15:
      repo:
        trigger: false
      traits:
        publish:
          dockerimages:
            replica-reloader:
              dockerfile: konnectivity-server/Dockerfile
              tag_template: v0.2.0-konnectivity-server-v0.0.15
              build_args:
                PROXY_SERVER_VERSION: v0.0.15
                REPLICA_RELOADER_IMAGE: eu.gcr.io/gardener-project/gardener/replica-reloader:v0.2.0
